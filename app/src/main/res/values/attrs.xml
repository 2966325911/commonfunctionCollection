<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FoldTextView">
        <attr name="showMaxLine" format="integer" />
        <attr name="tipGravity" format="integer" />
        <attr name="tipColor" format="reference|color" />
        <attr name="tipClickable" format="boolean" />
        <attr name="foldText" format="string" />
        <attr name="expandText" format="string" />
        <attr name="showTipAfterExpand" format="boolean" />
        <attr name="isSetParentClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RecordVideo">
        <attr name="video_width" format="integer"/>
        <attr name="video_height" format="integer"/>
        <attr name="open_camera" format="boolean"/>
        <attr name="timeLength" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CountdownView">
        <attr name="text" format="string"/>
        <attr name="text_color" format="string"/>
        <attr name="text_size" format="dimension"/>
        <attr name="update_time" format="integer"/>
        <attr name="total_time" format="integer"/>
        <attr name="progress_color" format="color"/>
        <attr name="progress_width" format="dimension"/>
        <attr name="progress_hint_color" format="color"/>
        <attr name="bg_color" format="color|reference"/>
    </declare-styleable>
</resources>